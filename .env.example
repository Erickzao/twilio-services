# Server
PORT=3000
NODE_ENV=development

# ScyllaDB
SCYLLA_CONTACT_POINTS=localhost:9042
SCYLLA_LOCAL_DATACENTER=datacenter1
SCYLLA_KEYSPACE=app

# Session
SESSION_EXPIRES_MS=604800000

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME=infra-test-api
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Twilio
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Twilio cache
# Tempo (ms) para considerar Workflows/TaskChannels "fresh" no cache (default: 3600000 = 1h)
TWILIO_CACHE_TTL_MS=3600000

# Tasks (auto processor)
TASKS_AUTO_ENABLED=true
TASKS_AUTO_POLL_INTERVAL_MS=1000
TASKS_AUTO_BATCH_SIZE=100
TASKS_AUTO_SOURCE=auto

# Twilio TaskRouter (Flex)
# Se n√£o setar, o backend tenta autodetectar um workspace com "Flex" no nome.
TWILIO_TASKROUTER_WORKSPACE_SID=
TASKS_FLEX_POLL_LIMIT=50

# Automated messages in Conversations
TASKS_AUTOMATION_AUTHOR=System
TASKS_FLEX_CLOSE_CONVERSATION=true
TASKS_FLEX_COMPLETE_TASK=true

# DB Admin (ScyllaDB)
# Painel interno em /db-admin (default: enabled em development; disabled em production)
DB_ADMIN_ENABLED=false
# Se setado, exige header x-admin-token para acessar o painel e as rotas /db-admin/api/*
DB_ADMIN_TOKEN=
# Permite queries de escrita no painel (default: false)
DB_ADMIN_ALLOW_WRITE=false
